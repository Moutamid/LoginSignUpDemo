<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_layout_filter_item"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/glasses2" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/cat2"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/mask2"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/dog"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/mask3"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/name_textview_filterItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/viewBtn"
            android:gravity="start"
            android:text="Admin Default Filters"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/viewBtn" />

        <Button
            android:id="@+id/viewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#C1DFFA"
            android:text="View all"
            android:textColor="@color/darkSkyBlue"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>