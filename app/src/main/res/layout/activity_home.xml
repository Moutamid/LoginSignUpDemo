<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_homeactivity"
        android:layout_width="match_parent"
        android:layout_above="@id/bottomLayoutHome"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/bottomLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_layout_filter_item"
        android:elevation="7dp">

        <ImageView
            android:id="@+id/homeBtn_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toStartOf="@id/middleBtn_home"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/middleBtn_home" />

        <ImageView
            android:id="@+id/homeBtn_home_unselected"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_toStartOf="@id/middleBtn_home"
            android:src="@drawable/ic_outline_home_24"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/middleBtn_home" />


        <ImageView
            android:id="@+id/middleBtn_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_home_button"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <ImageView
            android:id="@+id/personalBtn_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/middleBtn_home"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_toRightOf="@id/middleBtn_home" />

        <ImageView
            android:id="@+id/personalBtn_home_unclicked"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/middleBtn_home"
            android:src="@drawable/ic_person_outline_24"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/middleBtn_home" />

    </RelativeLayout>

</RelativeLayout>